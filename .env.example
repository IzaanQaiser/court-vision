# Sportradar (use either SPORTRADAR_API_KEY or NBA_API_KEY)
SPORTRADAR_API_KEY=your_sportradar_key
NBA_API_KEY=your_sportradar_key
SPORTRADAR_ACCESS_LEVEL=trial
SPORTRADAR_LANGUAGE=en
SPORTRADAR_SEASON_YEAR=2025
SPORTRADAR_SEASON_TYPE=REG
SPORTRADAR_FORMAT=json
SPORTRADAR_API_BASE=https://api.sportradar.com
# Optional: filter schedule to this date (YYYY-MM-DD)
SPORTRADAR_DATE=
# Optional: force date to a specific time zone (e.g., America/New_York)
SPORTRADAR_TIMEZONE=

# Confluent Cloud
CONFLUENT_CLOUD_API_KEY=your_confluent_key
CONFLUENT_CLOUD_API_SECRET=your_confluent_secret
CONFLUENT_BOOTSTRAP_SERVERS=pkc-xxxx.gcp.confluent.cloud:9092

# Kafka
KAFKA_CLIENT_ID=court-vision
KAFKA_TOPIC_RAW=pbp.raw
KAFKA_GROUP_ID=court-vision-test
